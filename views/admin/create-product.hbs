          value="{{product.openingHours}}" />
      </div> --}}

      <div class='form-row mb-3'>
        <label class='form-label' for='production'>Production</label>
        <select class="form-control" id="production" name="production">
          {{!-- {{#each categories}} --}}
          <option value="true">true</option>
          <option value="false">false</option>
          {{!-- {{/each}} --}}
        </select>
      </div>

      <div class='form-row mb-3'>
        <label class='form-label' for='introduction'>Introduction</label>
        <textarea class='form-control' id='introduction' name='introduction'
          rows='3'>{{product.introduction}}</textarea>
      </div>
      <div class="form-row mb-3">
        <label for="sampleImg" class="form-label">SampleImg</label>
        <input type="file" class="form-control" class="form-control-file" id="sampleImg" name="sampleImg">
      </div>

      <div class="form-row mb-3">
        <label for="sampleImg" class="form-label">image1</label>
        <input type="file" class="form-control" class="form-control-file" id="imgUrl" name="imgUrl">
