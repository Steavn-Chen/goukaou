<div class="row admin-products-page">
  <div class="col-md-6 col-sm-6 m-auto">

    <form action='/admin/products' method='POST' enctype="multipart/form-data">
      <div class='mb-4 text-center'>
        <h1 class='h3 font-weight-normal my-4'>Create Product</h1>
      </div>
      {{!-- {{> admin-restaurant-form}} --}}
      <div class='form-row mb-3'>
        <label class='form-label' for='name'>Name</label>
        <input class='form-control' type='text' name='name' id='name' placeholder='Enter name' value="{{product.name}}"
          required />
      </div>

      <div class='form-row mb-3'>
        <label class='form-label' for='categoryId'>Category</label>
        <select class="form-control" id="categoryId" name="categoryId">
          <option value="mask">mask
          </option>
          <option value="{{this.name}}">{{this.name}}
          </option>
          <option value="zentai">zentai
          </option>
          {{!-- {{#each categories}}
          <option value="{{this.id}}" {{#ifCond this.id ../restaurant.categoryId }} selected {{/ifCond}}>{{this.name}}
          </option>
          {{/each}} --}}
        </select>
      </div>

      {{!-- <div class='form-row mb-3'>
